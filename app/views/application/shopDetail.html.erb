<h1><%= shop.name %></h1>
<div>
  <%= link_to "Home", root_path %>
  >>
  <%= link_to "Shops", shops_path %>
</div>
<table border="1">
  <thead>
    <tr>
      <th>id</th>
      <th>title</th>
      <th>author</th>
      <th>author id</th>
      <th>quantity</th>
    </tr>
  </thead>
  <tbody>
  <% books.each do |book| %>
    <tr>
      <td><%= book.id %></td>
      <td><%= book.name %></td>
      <td><%= book.author.name %></td>
      <td><%= book.author.id %></td>
      <td><%= book.quantity %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<div>
  <p>Ordered by book title</p>
</div>